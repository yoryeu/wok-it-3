<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="103dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logowi" />

    <Button
        android:id="@+id/button_MenuClassique"
        android:layout_width="206dp"
        android:layout_height="57dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="102dp"
        android:backgroundTint="#4CAF50"
        android:text="MENU CLASSIQUE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_MenuEnfant"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="102dp"
        android:backgroundTint="#4CAF50"
        android:text="MENU ENFANT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_MenuEtudiant" />

    <Button
        android:id="@+id/button_MenuEtudiant"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="#4CAF50"
        android:text="MENU ETUDIANT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_MenuClassique" />
</androidx.constraintlayout.widget.ConstraintLayout>