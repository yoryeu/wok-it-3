<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_ToppingsPrecedent"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:backgroundTint="#F44336"
        android:text="PRECEDENT"
        app:iconTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Ananas" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="96dp"
        android:text="CHOISIS TES TOPPINGS !"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="89dp"
        android:layout_height="82dp"
        android:layout_marginStart="323dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="647dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logowi" />

    <ImageButton
        android:id="@+id/button_Cacahuettes"
        android:layout_width="169dp"
        android:layout_height="142dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_Ananas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_Sesam"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/cacahuete" />

    <ImageButton
        android:id="@+id/button_Ananas"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_ToppingsPrecedent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_FriedOignons"
        app:layout_constraintTop_toBottomOf="@+id/button_Cacahuettes"
        app:srcCompat="@drawable/ananas" />

    <ImageButton
        android:id="@+id/button_Sesam"
        android:layout_width="170dp"
        android:layout_height="142dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_FriedOignons"
        app:layout_constraintEnd_toStartOf="@+id/button_Cacahuettes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/sesames" />

    <ImageButton
        android:id="@+id/button_FriedOignons"
        android:layout_width="169dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_ToppingsPrecedent"
        app:layout_constraintEnd_toStartOf="@+id/button_Cacahuettes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Sesam"
        app:srcCompat="@drawable/oignons" />
</androidx.constraintlayout.widget.ConstraintLayout>