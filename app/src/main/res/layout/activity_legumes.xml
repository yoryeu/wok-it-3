<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_LegumePrecedent"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:backgroundTint="#F44336"
        android:text="PRECEDENT"
        app:iconTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Poivron" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="96dp"
        android:text="CHOISIS TES LEGUMES  !"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="89dp"
        android:layout_height="82dp"
        android:layout_marginStart="323dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="647dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logowi" />

    <ImageButton
        android:id="@+id/button_Champignon"
        android:layout_width="156dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_NoixDeCajou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_Brocoly"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/champi" />

    <ImageButton
        android:id="@+id/button_NoixDeCajou"
        android:layout_width="152dp"
        android:layout_height="143dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_LegumePrecedent"
        app:layout_constraintEnd_toStartOf="@+id/button_Poivron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Brocoly"
        app:srcCompat="@drawable/cajou" />

    <ImageButton
        android:id="@+id/button_Brocoly"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_NoixDeCajou"
        app:layout_constraintEnd_toStartOf="@+id/button_Champignon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/brocolis" />

    <ImageButton
        android:id="@+id/button_Poivron"
        android:layout_width="155dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_LegumePrecedent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_NoixDeCajou"
        app:layout_constraintTop_toBottomOf="@+id/button_Champignon"
        app:srcCompat="@drawable/poivrons" />

</androidx.constraintlayout.widget.ConstraintLayout>